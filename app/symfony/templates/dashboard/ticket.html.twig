{% extends 'menu.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
<main>
    <h1>Ticket</h1>

    <article>
        <h5>Title</h5>
        <p>{{ ticket.title }}</p>

        <h5>Description</h5>
        <p>{{ ticket.description }}</p>

        <h5>Assigned to</h5>
        <p>{{ ticket.TechnicianUserId }}</p>

        <h5>Priority</h5>
        <p>{{ ticket.PriorityId }}</p>

        <h5>Status</h5>
        <p>{{ ticket.StatusId }}</p>

        <h5>Categories</h5>
        <p>
            {% for label in ticket.labels %}
                {{ label }}
            {% endfor %}
        </p>

        <h5>Date</h5>
        <p>{{ ticket.CreatedDate | date("d/m/Y") }}</p>

        <div>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-primary"><i class="fa fa-edit"> Edit</i></a>
                <a href="{{ path('app_ticket_delete', {'id': ticket.id}) }}" class="btn btn-danger"><i class="fa fa-trash-o"> Delete</i></a>
            {% endif %}

            {% if not is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_ticket_status', {'id': ticket.id}) }}" class="btn btn-danger"><i class="fa fa-check-square-o"> Mark as completed</i></a>
            {% endif %}
        </div>

        <hr>
    </article>

    <section class="ticketComments">
        <h3>Comments</h3>
        <div>
            {% for comment in comments %}
                <div>
                    <p class="commentInfo"><i class="fa fa-user"></i> {{ comment.user.name | capitalize }} {{ comment.user.surname | capitalize }} (<a href="mailto:{{ comment.user.email }}" class="text-muted">{{ comment.user.email }}</a>) | <i class="fa fa-clock-o"></i> {{ comment.date | date("d/m/Y H:i:s") }}</p>
                    {{ comment.comment }}
                </div>
                <hr>
            {% endfor %}
        </div>
        {{ form_start(commentForm, {'attr': {'class': 'form-post'}}) }}
            {{ form_row(commentForm.comment, {'attr': {'class': 'form-control'} }) }}
            {{ form_row(commentForm.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(commentForm) }}
    </section>
</main>
{% endblock %}
