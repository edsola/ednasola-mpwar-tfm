{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="{{ path('app_dashboard') }}" class="navbar-brand">Tickets app</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a href="{{ path('app_create_ticket') }}" class="nav-item nav-link active">Create ticket</a>
                <a href="{{ path('app_register') }}" class="nav-item nav-link">Register</a>
            </div>
        </div>
    </nav>


<div class="example-wrapper">

    <h1>Tickets</h1>

    {% for ticket in tickets %}

        <article>
            <h5>Title</h5>
            <p>{{ ticket.title }}</p>

            <h5>Description</h5>
            <p>{{ ticket.description }}</p>

            <h5>Assigned to</h5>
            <p>{{ ticket.TechnicianUserId }}</p>

            <h5>Priority</h5>
            <p>{{ ticket.PriorityId }}</p>

            <h5>Status</h5>
            <p>{{ ticket.StatusId }}</p>

            <h5>Categories</h5>
            <p>
                {% for label in ticket.labels %}
                    {{ label }}
                {% endfor %}
            </p>

            <h5>Date</h5>
            <p>{{ ticket.CreatedDate | date("d/m/Y") }}</p>

            <hr>
        </article>

    {% endfor %}

</div>
{% endblock %}
