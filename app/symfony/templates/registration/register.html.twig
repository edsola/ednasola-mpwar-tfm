{% extends 'menu.html.twig' %}

{% block title %}TicketsApp | Register{% endblock %}

{% block body %}
    <h1>Register a new user</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'form-post register-form'}}) }}
    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'} }) }}
    {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'} }) }}
    {{ form_row(registrationForm.surname, {'attr': {'class': 'form-control'} }) }}
    {{ form_row(registrationForm.plainPassword, {
        'label': 'Password',
        'attr': {'class': 'form-control'}
    }) }}
    {{ form_row(registrationForm.roles, {'attr': {'class': 'form-control'} }) }}

    {{ form_row(registrationForm.submit, {'attr': {'class': 'btn btn-gradient'}}) }}

    {{ form_end(registrationForm) }}

{% endblock %}
